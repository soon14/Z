	},
	created(){
		
	},
	methods:{
		//获取所有库存
		getAllList(){
			this.axios.get('inventory/channel?uid='+this.uid).then((res)=>{
				if(res.data.status==200){
					this.dataList = res.data.rows
					this.total=res.data.total
					this.pageSize=res.data.pageSize
					res.data.rows.forEach((item)=>{
		 				// item.createTime=new Date(item.createTime).toLocaleDateString().replace(/\//g,'-')
			 		})
				}
			})
		},
		//单击左边数据
		dclick(id,index){
			this.numIndex = index
			this.valId=id
			this.getInfo(id)//详情
			this.getDeails(id)//明细
		},
		
		//获取详情GET /minventory/viewsku/{id} 详情
		getInfo(id){
			this.axios.get('inventory/viewsku/'+id+'?uid='+this.uid).then((res)=>{
				if(res.data.status==200){
					this.cgxqInfo=res.data.rows
					this.orderText=this.cgxqInfo.skuName
				}
			})
		},
		//叉号
		goPre(){
			this.$router.push({
				path:'/channelInventory',
				
			})
		},
		//GET /inventory/listDetail 库存明细this.valId
		getDeails(id){
			this.axios.get('/inventory/listDetail?uid='+this.uid+'&skuId='+this.valId).then(res=>{
				if(res.data.status==200){
					let data=res.data
					this.inventoryData=data.rows
					this.inventorytotal=data.total
					this.inventorypageSize=data.pageSize
				}
			})
		},
		//库存翻页
		inventorytotalgetData(current){
			this.axios.get('/inventory/listDetail?offset='+current+'&uid='+this.uid+'&skuId='+id).then(res=>{
				if(res.data.status==200){
					let data=res.data
					this.inventoryData=data.rows
					this.inventorytotal=data.total
					this.inventorypageSize=data.pageSize
				}
			})
		},
		inventorytotalchangePageSize(size){
			this.inventorypageSize=size
		},
		 //下拉加载更多
        handleReachEdge(){
			this.current++//默认10条
	 		this.axios.get('inventory/channel?offset='+this.current+'&uid='+this.uid).then((res)=>{
 				if(this.current>Math.ceil(this.total/this.pageSize)){
                        this.current=Math.ceil(this.total/this.pageSize)
                    }
		 		res.data.rows.forEach((item)=>{
		 			// item.createTime=new Date(item.createTime).toLocaleDateString().replace(/\//g,'-')
		 			this.dataList.push(item)
		 			
		 		})
		 	})
                  
        },
	},
	created(){

	},
	mounted(){
		if(this.$route.query.id){
			this.valId = this.$route.query.id
			this.numIndex = this.$route.query.index
			this.getInfo(this.$route.query.id)
			
			this.getDeails(this.$route.query.id)//明细
		}
		this.getAllList()
		// this.getInfo(this.valId)
		this.height = document.documentElement.clientHeight
		
		window.onresize=function(){
			this.height = document.documentElement.clientHeight
		}
	}
}
