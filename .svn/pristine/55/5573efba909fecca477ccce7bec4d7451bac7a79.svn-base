<script type="text/javascript">
import LoadUrl from '@/components/common/actionLoad'
	export default{
		data(){
			return{
				value1:0,
				vid:'',
				isshow:true,
				ggrow:{},//一条广告数据
                actionUrl:LoadUrl.httpPrefix.Url+'file/action/upload/image/url?uid='+this.$store.state.common.token,//导入地址
				goodsinshow:false,
				ImgName:'',//图片名称
				title:this.$t('operation.lunbos.Sidebar1'),//'广告预览',
				numIndex:0,
				uid:this.$store.state.common.token,
				valId:'',//管理选中的id
				total:0,
				pageSize:0,
				total1:0,
				pageSize1:0,
				goodspre:[],//管理
				goodspre1:[],//管理
				columns:[
					{
                        title:this.$t('operation.lunbos.imgP'),//"广告图片预览",
                        align:'center',
                        width:300,
                        key:"pic",
                        render:(h, params) =>{
                            return h('div',[
                                    h('img',{
                                        attrs:{
                                            src:params.row.pic
                                        },
                                        style:{
                                            width:'260px',
                                            height:'60px',
                                            marginTop:'3px'
                                        }
                                    })
                                ])
                        }
                    },
					{
						title:this.$t('operation.lunbos.date'),//'上传日期',
						key:'createTime',

						align:'center'
					},
					{
						title:this.$t('operation.lunbos.describe'),//'描述',
						key:'name',
						align:'center'
					},
					{
						title:this.$t('public.status'),//"状态",
						key:'statusDesc',
						width:80,
						render:(h,params)=>{
							return h('div',{
								style:{
									color:params.row.status===1?'#3b77e3':params.row.status===99?'#d53c39':''
								}
							},params.row.statusDesc)
						}
					}
				],//管理
				columns1:[
					{
						type: 'index',
						title:this.$t('operation.lunbos.sort'),//'排序',
						width:70,
					},
					{
                        title:this.$t('operation.lunbos.imgP'),//"广告图片预览",
                        align:'center',

                        key:"pic",
                        render:(h, params) =>{
                            return h('div',[
                                    h('img',{
                                        attrs:{
                                            src:params.row.pic
                                        },
                                        style:{
                                            width:'260px',
                                            height:'60px',
                                            marginTop:'3px'
                                        }
                                    })
                                ])
                        }
                    },

					{
						title:this.$t('operation.lunbos.order'),//'调序',
						align:'center',
						width:80,
						render:(h,params)=>{
							return h('div',[
								h('p',{
									style:{
										color:'#3b77e3',
										marginBottom:'10px',
										cursor:'pointer'
									},
									'on':{
										'click':()=>{

											this.up(this.goodspre,params.index)
											console.log(this.goodspre)
										}
									}
								},this.$t('operation.lunbos.up')),//'上移'
								h('p',{
									style:{
										color:'#d53c39',
										cursor:'pointer'
									},
									'on':{
										'click':()=>{
											this.down(this.goodspre,params.index)
										}
									}
								},this.$t('operation.lunbos.down'))//'下移'
								])
						}
					}
				],//管理
				Allfl:[
					{
						label:this.$t('operation.lunbos.Sidebar1'),//'广告预览',
						value:0
					},
					{
						label:this.$t('operation.lunbos.Sidebar2'),//''广告管理',
						value:1
					}
				],
				//新建数据
				pic:'',//图片地址
				name:'',//图片描述
				url:'',//图片跳转地址
				remark:'',//备注

			}
		},

		methods:{
			//单击左侧列表
				addBg(index){
					this.numIndex=index
					if(this.numIndex==0){
						this.title=this.$t('operation.lunbos.Sidebar1')//'广告预览'
					}
					if(this.numIndex==1){
						this.title=this.$t('operation.lunbos.Sidebar2')//'广告管理'
						this.getAll()//获取广告管理列表
					}
				},
				//表格选中时的数据，数组
				selected(selection,row){
					this.valId = row.id
				},
				//获取管理列表与预览
				getAll(){
					this.axios.get('/poster/query?uid='+this.uid).then(res=>{
						if(res.data.status==200){
							this.goodspre=res.data.rows
							console.log(this.goodspre)
							this.goodspre1=res.data.rows
							this.total=res.data.total
							this.pageSize=res.data.pageSize

							this.total1=res.data.total
							this.pageSize1=res.data.pageSize
							this.goodspre.forEach((x)=>{
								if(x.status===1){

									x.statusDesc='正常'
								}
								// if(x.status===0){

								// 	x.s='正常'
								// }
								if(x.status===99){

									x.statusDesc='已停用'
								}
								x.createTime=new Date(x.createTime).toLocaleDateString().replace(/\//g,'-')
							})
						}else{
							this.$notify({
		                        title:"",//
		                        message:res.data.errorMessage,
		                        type: 'error',
		                        position: 'bottom-right'
		                    });
						}
					})
				},
				//切换一条页
	            getData(current){
	                this.axios.get('/poster/query?offset='+current+'&uid='+this.uid).then((res)=>{

	                    this.goodspre = res.data.rows
	                    this.total=res.data.total
						this.pageSize=res.data.pageSize
	                })

	            },
	            //翻页
	            changePageSize(size){
	                this.pageSize = size
	            },
	            //切换一条页
	            getData1(current){
	                this.axios.get('/poster/query?offset='+current+'&uid='+this.uid).then((res)=>{

	                    this.goodspre1 = res.data.rows
	                    this.total1=res.data.total
						this.pageSize1=res.data.pageSize
	                })

	            },
	            //翻页
	            changePageSize1(size){
	                this.pageSize1 = size
	            },
	            //上传前
	            beforeAvatarUpload(file) {
	                const isJPG = file.type === 'image/jpeg';
	                const isPng = file.type === 'image/png';
	                const isLt2M = file.size / 1024 / 1024 < 2;
	                if (!isJPG && !isPng) {
	                      this.$notify({
	                        title: "",//'失败',
	                        message:this.$t('public.upJpngOrPng'),
	                        type: 'error',
	                        position: 'bottom-right'
	                    });
	                }
	                if (!isLt2M) {
	                     this.$notify({
	                        title: "",//'失败',
	                        message:this.$t('public.upJpngTwoM'),
	                        type: 'error',
	                        position: 'bottom-right'
	                    });
	                }
	                return isJPG || isPng && isLt2M;
	              },
	            //成功后的会掉
	            success(response, file, fileList){
	                if(response.status==200){
	                   
	                    this.ImgName=file.name
	                    this.pic=response.rows.url
	                    console.log(response)
	                }else{
	                	this.$notify({
	                        title: "",//'失败',
	                        message:"上传失败",
	                        type: 'error',
	                        position: 'bottom-right'
	                    });
	                }
	            },
	            //新建
	            addImg(){
	            	this.goodsinshow=true
	            	this.isshow=true
	            	this.ImgName=''
	            	this.name=''
	            	this.pic=''
	            	this.remark=''
	            },
	            //取消新建
	            modelCancel(){
	            	this.goodsinshow=false;
	            	this.ImgName=''
	            	this.name=''
	            	this.remark=''
	            },
	            //确认上传
	            makegoods(){
	            	if(this.ImgName==''){

						this.$notify({
	                        title:"",//
	                        message: '请选择图片！',
	                        type: 'error',
	                        position: 'bottom-right'
	                    });
	            	}else{
	            		this.axios.post('poster/add?uid='+this.uid,{
	            			pic:this.pic,
	            			name:this.name,
	            			remark:this.remark
	            		}).then(res=>{
	            			if(res.data.status==200){
	            				this.goodsinshow=false
	            				this.pic='',
	            				this.name='',
	            				this.remark=''
	            				this.getAll()
	            			}
	            		})

	            	}
	            },
	            //管理选中某一行
	            selectRow(data,index){
	            	this.vid=data.id
	            	this.ggrow=data
	            },
	            //点击修改
	            edit(){
	            	if(this.vid==''){

						this.$notify({
	                        title:"",//
	                        message: '请选一条需要修改的广告！',
	                        type: 'error',
	                        position: 'bottom-right'
	                    });
	            	}else{
	            		this.goodsinshow=true;
		            	this.isshow=false
		            	this.name=this.ggrow.name
		            	this.remark=this.ggrow.remark
		            	this.pic=this.ggrow.pic
	            	}

	            },
	            //确认修改
	            makegoodsedit(){
	            	this.axios.put('poster/update?uid='+this.uid,{
	            		id:this.vid,
	            		name:this.name,
	            		pic:this.pic,
	            		remark:this.remark
	            	}).then(res=>{
	            		if(res.data.status==200){
	            			this.pic='',
            				this.name='',
            				this.remark=''
            				this.goodsinshow=false;
            				this.$notify({
			                        title:"",//
			                        message: this.$t('public.editSuccess'),//
			                        type: 'success',
			                        position: 'bottom-right'
			                    });
	            			this.getAll()
	            		}else{
	            			this.$notify({
		                        title:"",//
		                        message:res.data.errorMessage,
		                        type: 'error',
		                        position: 'bottom-right'
		                    });
	            		}
	            	})
	            },
	            start(){
	            	if(this.vid==''){
	            		this.$notify({
	                        title:"",//
	                        message: '请选一条广告！',
	                        type: 'error',
	                        position: 'bottom-right'
	                    });
	            	}else{
	            		this.axios.post('poster/enabled/'+this.vid+'?uid='+this.uid).then(res=>{
		            		if(res.data.status==200){
		            			this.$notify({
			                        title:"",//
			                        message:this.$t('public.normalS'),//
			                        type: 'success',
			                        position: 'bottom-right'
			                    });
		            			this.getAll()
		            		}else{
		            			this.$notify({
			                        title:"",//
			                        message:res.data.errorMessage,
			                        type: 'error',
			                        position: 'bottom-right'
			                    });
		            		}
		            	})
	            	}
	            },
	            stop(){
	            	if(this.vid==''){
	            		this.$notify({
	                        title:"",//
	                        message: '请选一条广告！',
	                        type: 'error',
	                        position: 'bottom-right'
	                    });
	            	}else{
	            		this.axios.post('poster/disabled/'+this.vid+'?uid='+this.uid).then(res=>{
		            		if(res.data.status==200){
		            			this.$notify({
			                        title:"",//
			                        message:this.$t('public.normalT'),//
			                        type: 'success',
			                        position: 'bottom-right'
			                    });
		            			this.getAll()
		            		}else{
		            			this.$notify({
			                        title:"",//
			                        message:res.data.errorMessage,
			                        type: 'error',
			                        position: 'bottom-right'
			                    });
		            		}
		            	})
	            	}
	            },
	            del(){
	            	if(this.vid==''){

						this.$notify({
	                        title:"",//
	                        message: '请选一条广告！',
	                        type: 'error',
	                        position: 'bottom-right'
	                    });
	            	}else{
	            		this.axios.delete('poster/delete/'+this.vid+'?uid='+this.uid).then(res=>{
		            		if(res.data.status==200){
		            			this.$notify({
			                        title:"",//
			                        message: this.$t('public.deleteSuccess'),//
			                        type: 'success',
			                        position: 'bottom-right'
			                    });
		            			this.getAll()
		            		}else{
		            			this.$notify({
			                        title:"",//
			                        message: res.data.errorMessage,
			                        type: 'error',
			                        position: 'bottom-right'
			                    });
		            		}
		            	})
	            	}
	            },
	            //公用的上移下移
	            gysx(arr,index1,index2){
	            	arr[index1]=arr.splice(index2,1,arr[index1])[0];
	            	return arr
	            },
	            //上移
	            up(arr,index){
	            	if(index==0){

						this.$notify({
	                        title:"",//
	                        message: '已是第一条！',
	                        type: 'error',
	                        position: 'bottom-right'
	                    });
	            		return
	            	}
	            	this.gysx(arr,index,index-1)

	            },
	            //下移
	            down(arr,index){
	            	if(index==arr.length-1){

						this.$notify({
	                        title:"",//
	                        message: '已是最后一条！',
	                        type: 'error',
	                        position: 'bottom-right'
	                    });
	            		return
	            	}
	            	this.gysx(arr,index,index+1)
	            },
				//差号返回
				cancelHome(){
					this.$router.push('/operationhome')
				},
	       },

		 created(){
            	this.$nextTick(()=>{
				this.getAll()//获取广告管理列表
			})
        },
		mounted(){

	},
}
</script>
