                      :before-upload="beforeAvatarUpload"
                      :on-success='success'
                      accept="image/png, image/jpeg">
                      <el-button size="small" type="primary" style='background:#169BD5'>{{$t('public.upload')}}</el-button><!--点击上传-->
                     </el-upload>
                 </div>
